@using cce106_palit.Entity
@model User
@{
    ViewData["Title"] = "Log In";
}
<div class="min-h-screen flex items-center justify-center bg-gray-100 dark:bg-gray-900 px-4">
    <div class="w-full max-w-sm bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
        <div class="text-center mb-6">
            <img src="~/images/logo.png" alt="Logo" class="mx-auto w-16 h-14 mb-4" />
        </div>       

        <form asp-area="Admin" asp-controller="Auth" asp-action="Login" method="post" class="space-y-4">
            @Html.AntiForgeryToken()
            <div>
                <label for="username" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Username</label>
                <input type="text" name="Username" id="username"
                       class="mt-1 block w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 px-3 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
            </div>
            <div>
                <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Password</label>
                <input type="password" name="Password" id="password"
                       class="mt-1 block w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 px-3 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
            </div>

            <button type="submit"
                    class="cursor-pointer w-full bg-[var(--color-primary)] hover:bg-blue-600 text-white font-semibold py-2 rounded-md transition duration-200 text-center">
                Log In
            </button>
        </form>
    </div>
</div>

