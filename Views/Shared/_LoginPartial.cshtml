@if (Context.User.Identity.IsAuthenticated)
{
    var displayPicture = User.FindFirst("DisplayPicture")?.Value ?? "images/profile-user.png";

    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="~/@displayPicture" class="img-thumbnail rounded-circle" style="width: 40px; height: 40px; object-fit: cover;">
                Hello, @Context.User.Identity.Name
                <input type="hidden" value="@Context.User.FindFirst(ClaimTypes.NameIdentifier)?.Value" />
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="accountDropdown">
                <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">My Profile</a></li>
                <li><a class="dropdown-item" asp-controller="Account" asp-action="Orders">My Orders</a></li>
                <li><a class="dropdown-item" href="#">Settings</a></li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form asp-controller="Auth" asp-action="LogOut" method="post" id="logoutForm" onsubmit="return confirmLogout();">
                        <button type="submit" class="dropdown-item">Logout</button>
                    </form>
                </li>
            </ul>
        </li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a class="nav-link text-dark border-end" asp-controller="Auth" asp-action="Login"><small>Login</small></a></li>
        <li><a class="nav-link text-dark" asp-controller="Auth" asp-action="Registration"><small>Sign Up</small></a></li>

    </ul>
}

<script>
    function confirmLogout() {
        return confirm("Are you sure you want to log out?");
    }
</script>