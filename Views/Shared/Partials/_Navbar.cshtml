<nav class="navbar navbar-expand-md navbar-light bg-white border-bottom box-shadow mb-3 pt-4 px-5 fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold me-5" asp-area="" asp-controller="Home" asp-action="Index">
            <img src="~/images/logo.png" width="60" height="50" alt="Logo" />
            <span class="text-blue">PALIT</span>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse justify-content-between">
            <ul class="navbar-nav justify-content-between">
                <li class="nav-item">
                    <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "Home") ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "Shop" && ViewContext.RouteData.Values["controller"].ToString() == "Home") ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Shop">Shop</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#about-us">About</a>
                </li>
            </ul>

            <div class="d-flex justify-content-center align-items-center w-50">
                <form method="get" asp-action="Shop" asp-controller="Home" class="w-100">
                    <div class="d-flex justify-content-center w-100">
                        <input type="search" name="searchQuery" class="form-control rounded-3" placeholder="Search in PALIT Supermarket" />
                        <button type="submit" class="btn btn-light text-blue"><i class="ri-search-line"></i></button>
                     </div>
                </form>
            </div>


            <div class="d-flex justify-content-end align-items-center">
                @if (Context.User.Identity.Name != null)
                {
                    <a class="text-decoration-none me-2" asp-area="" asp-controller="Shop" asp-action="Cart">
                        <i class="home-icon ri-shopping-cart-line fs-2 text-blue"></i>
                    </a>
                }
                else
                {
                    <a class="text-decoration-none me-2" asp-area="" asp-controller="Auth" asp-action="Login">
                        <i class="home-icon ri-shopping-cart-line fs-2 text-blue"></i>
                    </a>
                }
              
                @await Html.PartialAsync("_LoginPartial")

            </div>

        </div>
    </div>
</nav>
