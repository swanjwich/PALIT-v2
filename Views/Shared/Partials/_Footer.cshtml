@{
    var isTermsPrivacyPage = ViewContext.RouteData.Values["action"]?.ToString() == "Terms" ||
                            ViewContext.RouteData.Values["action"]?.ToString() == "Privacy" ||
                        ViewContext.RouteData.Values["action"]?.ToString() == "Return";
}

@if (!isTermsPrivacyPage)
{
    <footer class="bg-[var(--color-primary)] text-white mt-5 py-6">
        <div class="max-w-6xl mx-auto px-6">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                <!-- About Section -->
                <div>
                    <h6 class="text-lg font-semibold mb-3">PALIT</h6>
                    <p class="text-sm">
                        PALIT is your go-to local supermarket in Davao City. With a commitment to "TATAK LOCAL, BARATO, and SULIT," we provide affordable products sourced from local suppliers. Shop with us for a true community experience.
                    </p>
                </div>

                <!-- About PALIT Links -->
                <div>
                    <h6 class="text-lg font-semibold mb-3">ABOUT PALIT</h6>
                    <ul class="space-y-2 text-sm">
                        <li><a asp-action="About" asp-controller="Home" class="hover:underline">About Us</a></li>
                        <li><a asp-action="Privacy" asp-controller="Home" class="hover:underline">Privacy Policy</a></li>
                        <li><a asp-action="Terms" asp-controller="Home" class="hover:underline">Terms of Service</a></li>
                        <li><a asp-action="FAQs" asp-controller="Home" class="hover:underline">FAQs</a></li>
                    </ul>
                </div>

                <!-- Payment Options -->
                <div>
                    <h6 class="text-lg font-semibold mb-3">PAYMENT</h6>
                    <div class="grid grid-cols-3 gap-2">
                        <img src="~/images/payment/gcash.png" class="w-12 h-auto" alt="GCash">
                        <img src="~/images/payment/maya.jpg" class="w-12 h-auto" alt="Maya">
                        <img src="~/images/payment/mastercard.png" class="w-12 h-auto" alt="Mastercard">
                        <img src="~/images/payment/visa.jpg" class="w-12 h-auto" alt="Visa">
                        <img src="~/images/payment/bpi.png" class="w-12 h-auto" alt="BPI">
                        <img src="~/images/payment/coinsph.jpg" class="w-12 h-auto" alt="Coins.ph">
                    </div>
                </div>

                <!-- Contact Information -->
                <div>
                    <h6 class="text-lg font-semibold mb-3">CONTACT</h6>
                    <ul class="text-sm space-y-2">
                        <li><i class="ri-map-pin-fill mr-2"></i> Matina, Davao City 8000, PH</li>
                        <li><i class="ri-mail-fill mr-2"></i> palit.ph@gmail.com</li>
                        <li><i class="ri-phone-fill mr-2"></i> +63 912 345 6789</li>
                        <li><i class="ri-smartphone-fill mr-2"></i> +63 992 424 3124</li>
                    </ul>
                </div>
            </div>

            <hr class="my-4 border-gray-400">

            <!-- Footer Bottom Section -->
            <div class="flex flex-col md:flex-row justify-between items-center text-sm">
                <p>© 2025 <span class="font-semibold">PALIT</span>. All Rights Reserved.</p>
                <div class="flex space-x-4 mt-2 md:mt-0">
                    <a href="#" class="text-white text-lg hover:text-gray-200"><i class="ri-facebook-circle-fill"></i></a>
                    <a href="#" class="text-white text-lg hover:text-gray-200"><i class="ri-mail-fill"></i></a>
                    <a href="#" class="text-white text-lg hover:text-gray-200"><i class="ri-instagram-fill"></i></a>
                </div>
            </div>
        </div>
    </footer>
}