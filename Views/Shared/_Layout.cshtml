<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PALIT</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/output.css" rel="stylesheet" asp-append-version="true">
    <link rel="stylesheet" href="~/cce106_palit.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/images/logo.png">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Koulen&family=Poppins:wght@100;200;300;400;500;600;700;900&family=Signika+Negative:wght@300..700&display=swap" rel="stylesheet">

    <!--Remix Icon-->
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.6.0/fonts/remixicon.css" rel="stylesheet" />

</head>
<body class="bg-gray-100 dark:bg-gradient-to-br dark:from-gray-900 dark:to-gray-800">
    <header>
        @await Html.PartialAsync("~/Views/Shared/Partials/_Navbar.cshtml")
    </header>

    <main class="px-5">
        @RenderBody()

        @await Html.PartialAsync("~/Views/Shared/Partials/_ToastNotif.cshtml")
        @await Html.PartialAsync("~/Views/Shared/Partials/_Modal.cshtml")
    </main>
    @await Html.PartialAsync("~/Views/Shared/Partials/_Footer.cshtml")

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/modal.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
