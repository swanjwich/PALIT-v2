@model it15_palit.Models.Auth.RegistrationViewModel

@{
    ViewData["Title"] = "Registration";
}
@if (TempData["Message"] != null)
{
    <div class="toast align-items-center bg-blue border-0 position-fixed top-0 end-0" style="margin-top: 7rem; z-index: 1050;" role="alert" aria-live="assertive" aria-atomic="true" id="toast">
        <div class="d-flex">
            <div class="toast-body text-white">
                @TempData["Message"]
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
}
<div class="container py-4 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-xl-10">
            <div class="card" style="border-radius: 1rem;">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-md-6 col-lg-6 d-none d-md-flex align-items-center justify-content-center">
                        <img src="~/images/banner.png" width="100%">
                    </div>
                    <div class="col-md-6 col-lg-6 p-5 d-flex align-items-center">
                        <div class="card-body text-black">
                            <form asp-action="Registration">
                                <h5 class="fw-bold mb-3 pb-3" style="letter-spacing: 1px;">Create a New Account</h5>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                @if (ViewBag.Message != null)
                                {
                                    <div class="form-group" style="color:green;">@ViewBag.Message</div>
                                }
                                <div class="form-floating mb-4">
                                    <input type="text" asp-for="Username" class="form-control" placeholder="Username" />
                                    <label for="floatingInput">Username</label>
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-4">
                                    <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
                                    <label for="floatingInput">Password</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-4">
                                    <input type="email" asp-for="Email" class="form-control" placeholder="Email address" />
                                    <label for="floatingInput">Email</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-4">
                                    <input type="text" asp-for="Name" class="form-control" placeholder="Full name" />
                                    <label for="floatingInput">Name</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-4">
                                    <input type="text" asp-for="Address" class="form-control" placeholder="Address" />
                                    <label for="floatingInput">Address</label>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-4">
                                    <input type="text" asp-for="Contact_Number" class="form-control" placeholder="Contact Number" />
                                    <label for="floatingInput">Contact Number</label>
                                    <span asp-validation-for="Contact_Number" class="text-danger"></span>
                                </div>
                                <div class="pt-1 mb-4">
                                    <button class="btn bg-blue text-white btn-lg btn-block" type="submit">Create Account</button>
                                </div>

                                <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                    Already have an account?
                                    <a asp-action="Login" class="text-decoration-none text-blue">Log In</a>
                                </p>
                                <a href="#!" class="small text-muted">Terms of use</a>
                                <a href="#!" class="small text-muted">Privacy policy</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
