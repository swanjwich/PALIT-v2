@{
    ViewData["Title"] = "Forgot Password";
}
<section class="mx-auto flex w-full max-w-5xl items-center justify-center min-h-screen bg-gray-100 px-4 mt-0">
    <div class="bg-white shadow-lg rounded-lg p-6 max-w-md w-full text-center">
        <h2 class="text-2xl font-bold text-gray-800">Email Verification Needed</h2>

        <p class="mt-3 text-gray-600">
            Before you can reset your password, we need to verify your identity first.
            Please input the email associated with your account below.
        </p>

        <form asp-controller="Auth" asp-action="ForgotPassword" method="post" class="mt-4">
            <input type="email" name="email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
                   placeholder="Enter your email" required>
            <span class="text-red-500 text-xs block text-left mt-1">@TempData["email"]</span>
            <button type="submit" class="cursor-pointer w-full mt-3 px-6 py-2 bg-[var(--color-primary)] text-white rounded-lg hover:bg-[var(--hover)] transition duration-300">
                Next
            </button>
        </form>
    </div>

</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
