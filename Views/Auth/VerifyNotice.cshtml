@{
    ViewData["Title"] = "Verify Email";
}
<section class="mx-auto flex w-full max-w-5xl items-center justify-center min-h-screen bg-gray-100 px-4 mt-0">
    <div class="bg-white shadow-lg rounded-lg p-6 max-w-md w-full text-center">
        <h2 class="text-2xl font-bold text-gray-800">Email Verification Needed</h2>

        <p class="mt-3 text-gray-600">
            Before you can access your account, you need to verify your email first. 
            A verification link has been sent to your email.
            Please check your inbox and click the link to activate your account.
        </p>

        <p class="mt-3 text-gray-500">Didn't receive the email?</p>

        <form asp-controller="Auth" asp-action="ResendVerification" method="post" class="mt-4">
            <input type="email" name="email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
                   placeholder="Enter your email" required>

            <button type="submit" class="w-full mt-3 px-6 py-2 bg-[var(--color-primary)] text-white rounded-lg hover:bg-[var(--hover)] transition duration-300">
                Resend Verification Email
            </button>
        </form>

        <p class="mt-4 text-gray-600">
            You may close this page once your email is verified. Happy shopping!
        </p>
    </div>

</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
