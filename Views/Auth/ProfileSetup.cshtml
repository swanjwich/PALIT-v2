@{
    ViewData["Title"] = "Complete Your Profile";
}

<section class="mx-auto flex w-full max-w-5xl items-center justify-center min-h-screen bg-gray-100 px-4 mt-0">
    <div class="bg-white shadow-lg rounded-lg p-6 max-w-md w-full text-center">
        <h2 class="text-2xl font-bold text-gray-800">Complete Your Profile</h2>

        <p class="mt-3 text-gray-600">
            Please provide your contact number and address to finish setting up your account.
        </p>

        <form asp-controller="Auth" asp-action="ProfileSetup" method="post" class="mt-4">

            <input type="text" name="ContactNumber" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
                   placeholder="Enter your contact number" required />
            <span class="text-red-500 text-xs block text-left mt-1">@TempData["contact"]</span>

            <textarea name="Address" rows="3" class="w-full mt-3 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
                      placeholder="Enter your address" required></textarea>
            <span class="text-red-500 text-xs block text-left mt-1">@TempData["address"]</span>

            <button type="submit" class="cursor-pointer w-full mt-3 px-6 py-2 text-white bg-[var(--color-primary)] rounded-lg hover:bg-[var(--hover)] transition duration-300">
                Save & Continue
            </button>
        </form>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
