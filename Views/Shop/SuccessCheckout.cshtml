@{
    ViewData["Title"] = "Order Successful";
}

<div class="mt-16 min-h-screen flex items-center justify-center px-4 bg-white dark:bg-gray-900 text-gray-800 dark:text-gray-100">
    <div class="text-center max-w-md">
        <h4 class="text-3xl font-bold mb-4 text-green-600 dark:text-green-400">Order Successful</h4>

        <img src="~/images/order-success.png" alt="Order Success" class="w-64 max-w-full mx-auto mb-6 drop-shadow-md rounded-lg" />

        <p class="mb-2 text-lg">Your order has been placed successfully.</p>
        <p class="mb-6 text-gray-600 dark:text-gray-300">Thank you for your purchase!</p>

        <a asp-action="Orders" asp-controller="Account"
           class="inline-block bg-[var(--color-primary)] hover:bg-blue-500 text-white font-medium py-2 px-6 rounded-full transition-all duration-200">
            View My Orders
        </a>
    </div>
</div>
