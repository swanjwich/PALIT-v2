@{
    ViewData["Title"] = "Cancelled";
}

<div class="mt-16 min-h-screen flex flex-col justify-center items-center text-center px-4 bg-white dark:bg-gray-900 text-gray-800 dark:text-gray-100">
    <div class="text-center max-w-md">
        <h4 class="text-3xl font-bold mb-4 text-red-600 dark:text-red-400">Order Cancelled</h4>

        <img src="~/images/cancelled.png" alt="Order Cancelled" class="w-64 max-w-full mb-6 mx-auto drop-shadow-md rounded-lg" />

        <p class="mb-2 text-lg font-semibold text-red-600 dark:text-red-400">Your order has been cancelled.</p>
        <p class="mb-6 text-gray-600 dark:text-gray-300">If this was a mistake, feel free to place your order again anytime.</p>

        <a asp-action="Orders" asp-controller="Account"
           class="inline-block bg-[var(--color-primary)] hover:bg-blue-500 text-white font-medium py-2 px-6 rounded-full transition-all duration-200">
            View My Orders
        </a>
    </div>
</div>
