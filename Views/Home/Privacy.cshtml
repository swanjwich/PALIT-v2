@{
    ViewData["Title"] = "Privacy Policy";
}
<div class="container mx-auto">
    <div class="flex flex-col lg:flex-row">
        <!-- Left Sidebar (Fixed on desktop, hidden on mobile) -->
        <div class="hidden lg:block w-full lg:w-1/4 xl:w-1/5 dark:bg-gray-800 lg:fixed top-0 left-0 h-full m-0 px-6 lg:px-8 xl:px-12 py-5 border-r border-gray-200">
            <div class="flex justify-start items-center">
                <img src="~/images/logo.png" class="w-8">
                <span class="text-[var(--color-primary)] font-bold">PALIT</span>
            </div>

            <h2 class="text-xl lg:text-2xl font-bold text-gray-900 dark:text-white mt-4">Privacy Policy</h2>

            <!-- Left Sidebar List -->
            <ul class="list-none text-gray-700 dark:text-gray-300 mt-4 px-0 lg:px-2">
                <li class="mb-3"><a href="#information-we-collect" class="text-black hover:text-blue-600">1. Information We Collect</a></li>
                <li class="mb-3"><a href="#how-we-use-your-information" class="text-black hover:text-blue-600">2. How We Use Your Information</a></li>
                <li class="mb-3"><a href="#data-protection" class="text-black hover:text-blue-600">3. Data Protection</a></li>
                <li class="mb-3"><a href="#cookies" class="text-black hover:text-blue-600">4. Cookies</a></li>
                <li class="mb-3"><a href="#third-party-services" class="text-black hover:text-blue-600">5. Third-Party Services</a></li>
                <li class="mb-3"><a href="#your-rights" class="text-black hover:text-blue-600">6. Your Rights</a></li>
                <li class="mb-3"><a href="#changes-to-privacy-policy" class="text-black hover:text-blue-600">7. Changes to Privacy Policy</a></li>
            </ul>
        </div>

        <!-- Mobile menu button -->
        <div class="lg:hidden flex items-center justify-between p-4 bg-gray-100 dark:bg-gray-700">
            <div class="flex items-center">
                <img src="~/images/logo.png" class="w-8">
                <span class="text-[var(--color-primary)] font-bold ml-2">PALIT</span>
            </div>
            <button id="menu-toggle" class="text-gray-700 dark:text-gray-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </div>

        <!-- Mobile sidebar (hidden by default) -->
        <div id="mobile-sidebar" class="hidden lg:hidden w-full bg-white dark:bg-gray-800 shadow-lg p-4">
            <h2 class="text-xl font-bold text-gray-900 dark:text-white">Privacy Policy</h2>
            <ul class="list-none text-gray-700 dark:text-gray-300 mt-4">
                <li class="mb-3"><a href="#information-we-collect" class="text-black hover:text-blue-600">1. Information We Collect</a></li>
                <li class="mb-3"><a href="#how-we-use-your-information" class="text-black hover:text-blue-600">2. How We Use Your Information</a></li>
                <li class="mb-3"><a href="#data-protection" class="text-black hover:text-blue-600">3. Data Protection</a></li>
                <li class="mb-3"><a href="#cookies" class="text-black hover:text-blue-600">4. Cookies</a></li>
                <li class="mb-3"><a href="#third-party-services" class="text-black hover:text-blue-600">5. Third-Party Services</a></li>
                <li class="mb-3"><a href="#your-rights" class="text-black hover:text-blue-600">6. Your Rights</a></li>
                <li class="mb-3"><a href="#changes-to-privacy-policy" class="text-black hover:text-blue-600">7. Changes to Privacy Policy</a></li>
            </ul>
        </div>

        <!-- Right Column (Scrollable) -->
        <div class="w-full lg:w-3/4 xl:w-4/5 dark:bg-gray-800 px-4 sm:px-6 lg:px-8 xl:px-12 py-6 lg:py-12 lg:ml-[25%] xl:ml-[20%]">
            <!-- Close Button -->
            <a asp-action="Index" class="cursor-pointer absolute top-4 right-4 text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </a>

            <!-- Content -->
            <h2 class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-white">Privacy Policy</h2>
            <p class="text-gray-700 dark:text-gray-300 mt-2">Effective April 25, 2025</p>

            <p class="text-gray-700 dark:text-gray-300 mt-4">
                Your privacy is important to us. This Privacy Policy explains how we collect, use, and protect your personal data.
            </p>

            <section id="information-we-collect" class="mt-6">
                <h5 class="text-lg sm:text-xl font-bold text-gray-900 dark:text-white">1. Information We Collect</h5>
                <p class="text-gray-700 dark:text-gray-300 mt-2">
                    Personal Information: Name, email, phone number, address, and payment details.<br>
                    Usage Data: IP address, browser type, pages visited, and referring URLs.
                </p>
            </section>

            <section id="how-we-use-your-information" class="mt-6">
                <h5 class="text-lg sm:text-xl font-bold text-gray-900 dark:text-white">2. How We Use Your Information</h5>
                <p class="text-gray-700 dark:text-gray-300 mt-2">
                    To process orders and payments.<br>
                    To deliver your purchases.<br>
                    To improve website performance and user experience.<br>
                    To send updates, promotions, or important service notices.
                </p>
            </section>

            <section id="data-protection" class="mt-6">
                <h5 class="text-lg sm:text-xl font-bold text-gray-900 dark:text-white">3. Data Protection</h5>
                <p class="text-gray-700 dark:text-gray-300 mt-2">
                    We implement appropriate security measures to protect your data from unauthorized access, alteration, or disclosure.
                </p>
            </section>

            <section id="cookies" class="mt-6">
                <h5 class="text-lg sm:text-xl font-bold text-gray-900 dark:text-white">4. Cookies</h5>
                <p class="text-gray-700 dark:text-gray-300 mt-2">
                    Our website uses cookies to enhance your browsing experience. You may disable cookies in your browser, but some features may not function properly.
                </p>
            </section>

            <section id="third-party-services" class="mt-6">
                <h5 class="text-lg sm:text-xl font-bold text-gray-900 dark:text-white">5. Third-Party Services</h5>
                <p class="text-gray-700 dark:text-gray-300 mt-2">
                    We may share information with third-party service providers (e.g., delivery couriers, payment processors) solely for business purposes. We do not sell your personal data.
                </p>
            </section>

            <section id="your-rights" class="mt-6">
                <h5 class="text-lg sm:text-xl font-bold text-gray-900 dark:text-white">6. Your Rights</h5>
                <p class="text-gray-700 dark:text-gray-300 mt-2">
                    You have the right to access, update, or delete your personal information. Contact us at palit.ph@gmail.com for any requests.
                </p>
            </section>

            <section id="changes-to-privacy-policy" class="mt-6">
                <h5 class="text-lg sm:text-xl font-bold text-gray-900 dark:text-white">7. Changes to Privacy Policy</h5>
                <p class="text-gray-700 dark:text-gray-300 mt-2">
                    We reserve the right to update this policy. We will notify users of significant changes by email or notice on our website.
                </p>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Toggle mobile menu
        document.getElementById('menu-toggle').addEventListener('click', function() {
            const sidebar = document.getElementById('mobile-sidebar');
            sidebar.classList.toggle('hidden');
        });

        // Close mobile menu when clicking a link
        document.querySelectorAll('#mobile-sidebar a').forEach(link => {
            link.addEventListener('click', function() {
                document.getElementById('mobile-sidebar').classList.add('hidden');
            });
        });
    </script>
}